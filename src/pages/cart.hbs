<h1>Cart</h1>
<div class="cart">
  {{#if list.length}}
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      {{#each list}}
        <tr>
          <td>{{name}}</td>
          <td>{{count}}</td>
          <td>{{price}}</td>
          <td>
            <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
    <p><strong>Price</strong> <span class="price">{{price}} $</span></p>
  {{else}}
    <p>Your cart is empty</p>
  {{/if}}
</div>
